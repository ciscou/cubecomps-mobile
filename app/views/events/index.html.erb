<% content_for(:back_button) do %>
  <%= link_to "Back", competitions_path, data: { icon: "back" } %>
<% end %>

<% content_for(:title) do %>
  <% ccm_cache [@competition, "name"], competition_id: @competition.id, expires_in: 1.hour do %>
    <%= @competition.name.html_safe %>
  <% end %>
<% end %>

<% content_for(:navbar) do %>
  <ul>
    <li><%= link_to "Events",      competition_events_path(@competition),      data: { icon: "bars"  }, class: "ui-btn-active" %></li>
    <li><%= link_to "Competitors", competition_competitors_path(@competition), data: { icon: "user"  } %></li>
    <li><%= link_to "Schedule",    competition_schedule_path(@competition),    data: { icon: "clock" } %></li>
  </ul>
<% end %>

<% content_for(:desktop_version_url) { "http://www.cubecomps.com/live.php?cid=#{@competition.id}&desktop=1" } %>

<script id="event-template" type="text/x-handlebars-template">
  <%= render "event" %>
</script>

<div id="events-region" data-competition-id="<%= @competition.id %>">
</div>
